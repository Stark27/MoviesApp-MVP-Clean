<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movieCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imv_card_movieCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cardview"
            android:background="@drawable/infinity_war"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left_cardview"
            android:paddingBottom="@dimen/padding_bottom_cardview"
            android:background="@color/colorTransparentCardview"
            >

            <TextView
                android:id="@+id/tv_cardview_movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_title"
                android:textSize="@dimen/textSize_movieTitle_cardview"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/tv_cardview_voteAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_vote_average"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
        
    </FrameLayout>

</android.support.v7.widget.CardView>